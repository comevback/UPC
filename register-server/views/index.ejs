<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Services</title>
    <link rel="stylesheet" href="styles/styles.css">
</head>

<body>
    <h1>Registered Services</h1>
    <div class="services-container">
        <% for (const [url, service] of Object.entries(frontendServices)) { %>
            <div class="service-card frontend">
                <h2>Frontend Service</h2>
                <strong>Name:</strong>
                <%= service.name %><br>
                    <strong>URL:</strong> <a href="<%= service.url %>" target="_blank">
                        <%= service.url %>
                    </a><br>
                    <strong>Registered At:</strong>
                    <%= new Date(service.registeredAt).toLocaleString() %><br>
            </div>
            <% } %>
                <% services.forEach(function(service) { %>
                    <div class="service-card backend">
                        <h2>Backend Service</h2>
                        <strong>ID:</strong>
                        <%= service._id %><br>
                            <strong>URL:</strong> <a href="<%= service.url %>" target="_blank">
                                <%= service.url %>
                            </a><br>
                            <strong>Endpoints:</strong>
                            <ul>
                                <% service.endpoints.forEach(function(endpoint) { %>
                                    <li>
                                        <%= endpoint %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <strong>Last Heartbeat:</strong>
                            <%= new Date(service.lastHeartbeat).toLocaleString() %><br>
                    </div>
                    <% }) %>
    </div>
</body>

</html>